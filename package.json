{
  "name": "progressive-web-apps-1920",
  "version": "1.0.0",
  "description": "In this course we will convert the client side web application previously made at the OBA into a server side rendered application. We also add functionalities based on the Service Worker and turn the application into a Progressive Web App. Ultimately we are going to implement a series of optimisations to improve the performance of the application.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "scripts": {
    "prestart": "npm run build:css",
    "start": "nodemon server.js",
    "prebuild:css": "rimraf ./public/dist",
    "build:css": "gulp sass",
    "watch:css": "gulp watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StefanGerrits2/progressive-web-apps-1920.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/StefanGerrits2/progressive-web-apps-1920/issues"
  },
  "homepage": "https://github.com/StefanGerrits2/progressive-web-apps-1920#readme",
  "dependencies": {
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.0.2",
    "nodemon": "^2.0.2"
  }
}
